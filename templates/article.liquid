
<div class="breadcrumbs">
	<span itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="{{ shop.url }}" title="{{ shop.name | escape }}" itemprop="url"><span itemprop="title">Home</span></a></span>
	&#62;
	<span itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="{{ blog.url }}" title="{{ blog.title | escape }}" itemprop="url"><span itemprop="title">{{ blog.title }}</span></a></span>
	&#62;
	<span itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><span itemprop="title">{{ article.title }}</span></span>
</div>


<div id="articlecontent">
	<div class="article-images">
		<ul>
		     {% if article.content contains "<img" %}
		          {% assign content-src = article.content | split: 'src="' %}
		          {% assign content-size = content-src.size | minus:1 %}
		          {% for i in (1..content-size) %}
		              {% assign src = content-src[i] | split: '"' | first | replace: '//cdn', 'http://cdn';;;; | replace: 'http:http://';;;;, 'http://';;;; | remove: 'https:' %}


		<li>
		<img src="{{src}}" />
		</li>
				{% endfor %}
		     {% endif %}
		</ul>
	</div>

	<div class="article">

			<h4>{{ article.title }}</h4>
			{{ article.content }}

		{% if blog.next-article != false %}
			<div class="article-btn"><a href="{{ blog.next-article }}"><h3>Next Article</h3></a></div>
			{{ blog.next-article }}
		{% endif %}

		{% if blog.previous-article != false %}
			<div class="article-btn"><a href="{{ blog.previous-article }}"><h3>Previous Article</h3></a></div>
		{% endif %}

	</div>

	<div class="listofblogs">
		<h3>Recent Articles</h3>
		<ul>
			{% for article in blogs["blog"].articles limit:5 %}
				<li>
					<a href="{{ article.url }}" title="{{ article.title | escape }}">{{ article.title }}</a>
					<span >{{ article.published_at | date: "%B %d, %Y" }}</span>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="subsection">
		{% for tag in article.tags %}
			{% if forloop.index0 == 0 %}
				<span>Posted in</span>
			{% endif %}
			<a href="{{ shop.url}}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" title="{{ blog.title }} tagged {{ tag | escape }}">{{ tag }}</a>{% unless forloop.last %},{% endunless %}
		{% endfor %}
	</div>
</div>
