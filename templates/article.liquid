<div id="articlecontent">
	<div class="article-images">
		<ul>
		     {% if article.content contains "<img" %}
		          {% assign content-src = article.content | split: 'src="' %}
		          {% assign content-size = content-src.size | minus:1 %}
		          {% for i in (1..content-size) %}
		              {% assign src = content-src[i] | split: '"' | first | replace: '//cdn', 'http://cdn';;;; | replace: 'http:http://';;;;, 'http://';;;; | remove: 'https:' %}


		<li>
		<img src="{{src}}" />
		</li>
				{% endfor %}
		     {% endif %}
		</ul>
	</div>

	<div class="article">

			<h4>{{ article.title }}</h4>
			{{ article.content }}
			<div class="article-nav">
				<ul>
					<li class="article-btn">
						<a href="{{ blog.next_article }}" title="{{ blog.next_article.title | escape }}">Next Article</a>
					</li>
					<li class="article-btn">
						<a href="{{ blog.previous_article }}" title="{{ blog.previous_article.title | escape }}">Previous Article</a>
					</li>
				</ul>
			</div>

	</div>
